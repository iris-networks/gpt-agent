{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "@ui-tars/shared": ["../../shared/src"],
      "@ui-tars/action-parser": ["../../action-parser/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared" },
    { "path": "../action-parser" }
  ]
}
