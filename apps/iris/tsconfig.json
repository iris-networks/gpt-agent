{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@ui-tars/sdk": ["../../packages/ui-tars/sdk/src"],
      "@ui-tars/shared": ["../../packages/ui-tars/shared/src"],
      "@ui-tars/operator-browser": ["../../packages/ui-tars/operators/browser-operator/src"],
      "@ui-tars/operator-nut-js": ["../../packages/ui-tars/operators/nut-js/src"],
      "@ui-tars/utio": ["../../packages/ui-tars/utio/src"],
      "@agent-infra/browser": ["../../packages/agent-infra/browser/src"],
      "@agent-infra/logger": ["../../packages/agent-infra/logger/src"],
      "@agent-infra/shared": ["../../packages/agent-infra/shared/src"]
    },
    "lib": ["ES2022", "DOM"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/ui-tars/sdk" },
    { "path": "../../packages/ui-tars/shared" },
    { "path": "../../packages/ui-tars/operators/browser-operator" },
    { "path": "../../packages/ui-tars/operators/nut-js" },
    { "path": "../../packages/ui-tars/utio" },
    { "path": "../../packages/agent-infra/browser" },
    { "path": "../../packages/agent-infra/logger" },
    { "path": "../../packages/agent-infra/shared" }
  ]
}