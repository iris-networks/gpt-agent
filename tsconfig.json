{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@agent-infra/*": ["packages/agent-infra/*"],
      "@ui-tars/*": ["packages/ui-tars/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./packages/agent-infra/logger" },
    { "path": "./packages/agent-infra/browser" },
    { "path": "./packages/agent-infra/shared" },
    { "path": "./packages/ui-tars/shared" },
    { "path": "./packages/ui-tars/action-parser" },
    { "path": "./packages/ui-tars/utio" },
    { "path": "./packages/ui-tars/sdk" },
    { "path": "./packages/ui-tars/operators/browser-operator" },
    { "path": "./packages/ui-tars/operators/nut-js" },
    { "path": "./apps/iris" }
  ]
}