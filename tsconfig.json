{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ui-tars/shared/*": ["packages/shared/src/*"],
      "@ui-tars/sdk/*": ["packages/sdk/*"],
      "@ui-tars/action-parser": ["packages/action-parser/src"]
    }
  },
  "include": [
    "src/**/*",
    "pulsar/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}